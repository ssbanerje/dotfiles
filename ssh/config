Host *
  TCPKeepAlive yes
  ServerAliveInterval 15
  ServerAliveCountMax 6
  ControlMaster auto
  ControlPath /tmp/ssh_%r@%h:%p
  ControlPersist yes
  ForwardX11 yes
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_rsa

Host github.com
  User git
  Hostname github.com
  PreferredAuthentications publickey
  AddKeysToAgent yes
  IdentityFile ~/.ssh/github_ed25519
